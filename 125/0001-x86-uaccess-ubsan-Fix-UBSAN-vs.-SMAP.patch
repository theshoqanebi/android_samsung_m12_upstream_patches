 1 file changed, 1 insertion(+)

diff --git a/lib/Makefile b/lib/Makefile
index 92f746eff..5eba28cdd 100644
--- a/lib/Makefile
+++ b/lib/Makefile
@@ -274,6 +274,7 @@ obj-$(CONFIG_UCS2_STRING) += ucs2_string.o
